#!/bin/zsh
export LANG=ja_JP.UTF-8
export LC_CTYPE=ja_JP.UTF-8
export LC_NUMERIC=ja_JP.UTF-8
export LC_TIME=ja_JP.UTF-8
export LC_COLLATE=ja_JP.UTF-8
export LC_MONETARY=ja_JP.UTF-8
export LC_MESSAGES=ja_JP.UTF-8
export LC_PAPER=ja_JP.UTF-8
export LC_NAME=ja_JP.UTF-8
export LC_ADDRESS=ja_JP.UTF-8
export LC_TELEPHONE=ja_JP.UTF-8
export LC_MEASUREMENT=ja_JP.UTF-8
export LC_IDENTIFICATION=ja_JP.UTF-8
export LC_ALL=ja_JP.UTF-8
export PATH=~/bin:~/local/bin:$PATH
export INFOPATH=~/.emacs.d/info
export DOCKER_HOST="tcp://localhost:4242"

# 会社用
if [ `hostname` = "turris" ]; then
    export AQUA_PREFIX=/opt/aqua/test
    export JAVA_HOME=/opt/java/jdk
    export PATH=$JAVA_HOME/bin:$PATH
    export CATALINA_HOME=$AQUA_PREFIX/tomcat
    export CATALINA_OPTS="-XX:MaxPermSize=256m -Xmx1024m -ea"
    export PATH=$CATALINA_HOME/bin:$PATH
    export ANT_HOME=/opt/ant
    export PATH=$ANT_HOME/bin:$PATH
    export SENCHA_CMD_3_0_0=/opt/aqua/dev/Sencha/Cmd/3.0.0.250/
    export RUBYLIB=/opt/aqua/repo/custom-application/tools/:$RUBYLIB
    export NLS_LANG=Japanese_Japan.AL32UTF8
fi

if [ -e $HOME/.tmuxinator/scripts/tmuxinator ]; then
    source $HOME/.tmuxinator/scripts/tmuxinator
fi

if [ -e $HOME/.gvm/scripts/gvm ]; then
    source /home/takaishi_r/.gvm/scripts/gvm
    export GOPATH=$HOME
    gvm use 1.3.3
fi

if [ -e $HOME/.rvm/scripts/rvm ]; then
    source ~/.rvm/scripts/rvm
fi
